---
import type { Props } from '../props';
import { Image } from "astro:assets";
import apple_watch_bezel from "../assets/apple_watch_bezel.png";
import complication_start from "../assets/complication_start.mp4";
---

<div class="sl-flex demo-container">
  <div class="sl-flex watch-side">
    <div class="sl-flex watch-container">
      <div class="sl-flex watch-content">
        <div class="video-mask">
          <video autoplay loop muted playsinline class="watch-video">
            <source src={complication_start} type="video/mp4" />
          </video>
        </div>
        <Image
          src={apple_watch_bezel}
          alt="Apple Watch bezel"
          class="watch-bezel"
        />
      </div>
    </div>
  </div>
  <div class="text-side">
    <slot />
  </div>
</div>